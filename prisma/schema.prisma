generator client {
  provider = "prisma-client-js"
  output   = "../prisma/client"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Blog {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  uid         String
  title       String
  subdomain   String
  owner       String
  banner      String?
  theme_id    String?
  theme_color String?
}

model Post {
  id           String      @id @default(auto()) @map("_id") @db.ObjectId
  url          String
  title        String
  parent_id    String
  subdomain    String
  owner        String
  content_html String
  content_json JSONContent
  banner       String?
}

type JSONContent {
  type    String?
  content Json[]
  attrs   Json?
  marks   Json?
  text    String?
}
